{
  "name": "frontend",
  "version": "1.0.0",
  "main": " ",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "employer",
    "shared"
  ],
  "scripts": {
    "build": "yarn build:employer",
    "build:employer": "lerna run --scope @frontend/employer --stream build",
    "dev": "yarn dev:employer",
    "dev:employer": "lerna run --scope @frontend/employer --stream dev",
    "start": "yarn start:employer",
    "start:employer": "lerna run --scope  @frontend/employer --stream start",
    "release": "cross-env HUSKY_BYPASS=true && lerna publish",
    "husky:pre-commit": "lerna run --concurrency 1 --stream pre-commit",
    "lint": "lerna run --stream lint",
    "test": "yarn jest",
    "test:staged": "yarn test --watchAll=false --findRelatedTests",
    "browser-test": "testcafe \"chrome --window-size='1249,720'\" testcafe.config.js ./**/browser-tests/",
    "browser-test:ci": "testcafe \"chrome:headless --disable-gpu --window-size='1249,720'\" --screenshots takeOnFails=true,path=report,fullPage=true --video report --reporter spec,custom,html:report/index.html ./**/browser-tests/"
  },
  "devDependencies": {
    "@axe-core/react": "^4.1.1",
    "@babel/core": "^7.13.16",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/testcafe": "^4.4.0",
    "@testing-library/user-event": "^13.1.5",
    "@types/jest": "^26.0.23",
    "@types/jest-axe": "^3.5.1",
    "@types/slack-node": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-auto": "^0.7.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-array-func": "^3.1.7",
    "eslint-plugin-chai-expect": "^2.2.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jest-async": "^1.0.3",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-markdown": "^2.0.1",
    "eslint-plugin-no-constructor-bind": "^2.0.4",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-no-unsanitized": "^3.1.5",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-scanjs-rules": "^0.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-testing-library": "^4.1.2",
    "eslint-plugin-unicorn": "^31.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "nock": "^13.0.11",
    "prettier": "^2.2.1",
    "pretty": "^2.0.0",
    "slack-node": "^0.1.8",
    "testcafe": "^1.14.0",
    "testcafe-reporter-custom": "^1.1.1",
    "testcafe-reporter-html": "^1.4.6",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
