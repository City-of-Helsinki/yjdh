{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "testcafe/*": ["shared/testcafe/*"],
      "employer/*": ["employer/src/*"],
      "shared/*": ["shared/src/*"],
      "test-utils": ["shared/test/test-utils"]
    }
  },
  "exclude": ["node_modules"]
}
