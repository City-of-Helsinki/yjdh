{
  "bootstrap-sha": "284ccb78ea46ae260f42b4aa600171a1bfd5a2a6",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version} [skip azp]",
  "separate-pull-requests": true,
  "sequential-calls": true,
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "perf", "section": "Performance Improvements"},
    {"type": "deps", "section": "Dependencies"},
    {"type": "build", "scope": "deps", "section": "Dependencies"},
    {"type": "revert", "section": "Reverts"},
    {"type": "docs", "section": "Documentation"},
    {"type": "style", "section": "Styles", "hidden": true},
    {"type": "chore", "section": "Miscellaneous Chores", "hidden": true},
    {"type": "refactor", "section": "Code Refactoring", "hidden": true},
    {"type": "test", "section": "Tests", "hidden": true},
    {"type": "build", "section": "Build System", "hidden": true},
    {"type": "ci", "section": "Continuous Integration", "hidden": true}
  ],
  "packages": {
    "backend/benefit": {
      "release-type": "python",
      "package-name": "benefit-backend"
    },
    "frontend/benefit/applicant": {
      "release-type": "node",
      "package-name": "benefit-applicant"
    },
    "frontend/benefit/handler": {
      "release-type": "node",
      "package-name": "benefit-handler"
    },
    "backend/kesaseteli": {
      "release-type": "python",
      "package-name": "kesaseteli-backend"
    },
    "frontend/kesaseteli/employer": {
      "release-type": "node",
      "package-name": "kesaseteli-employer"
    },
    "frontend/kesaseteli/handler": {
      "release-type": "node",
      "package-name": "kesaseteli-handler"
    },
    "frontend/kesaseteli/youth": {
      "release-type": "node",
      "package-name": "kesaseteli-youth"
    }
  },
  "plugins": ["sentence-case"]
}
